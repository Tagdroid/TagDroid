<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TagDroidTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/bleu_tag</item>
        <item name="colorPrimaryDark">@color/bleu_tag_fonce1</item>
        <item name="colorAccent">@color/bleu_tag_fonce1</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowBackground">@color/bleu_tag_clair2</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
    </style>

</resources>
