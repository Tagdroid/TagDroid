<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TagDroidTheme" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TagDroidTheme_ActionBar</item>
        <item name="android:actionBarSize">@dimen/action_bar_height</item>
        <item name="android:windowBackground">@color/bleu_tag_clair2</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:logo">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_up_compat</item>
        <item name="android:actionOverflowButtonStyle">@style/TagDroidTheme_ActionBar_Overflow</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="TagDroidTheme_ActionBar" parent="android:Widget.Holo.ActionBar.Solid">
        <item name="android:background">@color/bleu_tag</item>
        <item name="android:icon">@drawable/actionbar_icon_placeholder_compat</item>
        <item name="android:titleTextStyle">@style/TagDroidTheme_ActionBar_Title</item>
    </style>

    <style name="TagDroidTheme_ActionBar_Title" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TagDroidTheme_ActionBar_Overflow" parent="android:Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_ab_overflow_compat</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>
