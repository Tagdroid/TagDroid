<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView android:id="@+id/iv1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gris_fonce"
        android:maxHeight="100dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView android:text="@string/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gris_fonce"
            android:textStyle="bold" />
        <View android:background="@color/gris_fonce"
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView android:id="@+id/storybox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gris_fonce"
                android:padding="5dp"
                android:textSize="12sp" />
        </ScrollView>
        <Button android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/more" />
    </LinearLayout>
</LinearLayout>