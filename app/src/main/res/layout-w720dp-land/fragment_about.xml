<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2">

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/TitleLogo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:src="@drawable/tagdroid_about" />

                                <TextView
                                    android:id="@+id/AppNonOfficielle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light"
                                    android:text="@string/about_desc"
                                    android:textColor="@color/gris_fonce" />

                                <TextView
                                    android:id="@+id/Compatibilité"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light"
                                    android:text="@string/about_desc2"
                                    android:textColor="@color/gris_fonce" />

                            </LinearLayout>
                        </LinearLayout>

                        <Button
                            android:id="@+id/showlog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Show Log"
                            android:textColor="@color/gris_fonce" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/about_description"
                        android:textColor="@color/gris_fonce"
                        android:singleLine="false" />

                    <TextView
                        android:id="@+id/DroitsImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="fill_vertical"
                        android:text="@string/footer"
                        android:textColor="@color/gris_fonce"
                        android:textSize="10dp"
                        android:textStyle="italic"
                        android:typeface="serif" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView5"
                            android:background="@drawable/ic_favoris_2"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="sans-serif-light"
                            android:text="Quentin DESBOIS"
                            android:textColor="@color/gris_fonce"
                            android:textSize="18sp"
                            android:id="@+id/textView"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:id="@+id/AuteurTitre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auteur"
                            android:textColor="@color/gris_fonce"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_horizontal">

                            <ImageButton android:id="@+id/websiteQuentin"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/about_btn_website"
                                android:layout_gravity="top"
                                android:padding="8dp"
                                android:layout_marginRight="20dp" />

                            <ImageButton android:id="@+id/mailQuentin"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/about_btn_mail"
                                android:layout_gravity="right" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@color/lighter_gray"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView5"
                            android:background="@drawable/ic_favoris_2"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="sans-serif-light"
                            android:text="Félix PIÉDALLU"
                            android:textColor="@color/gris_fonce"
                            android:textSize="18sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:id="@+id/CollaborateurTitre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/codev"
                            android:textColor="@color/gris_fonce"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/mailFélix"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/about_btn_mail"
                            android:visibility="visible"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/lighter_gray"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:nestedScrollingEnabled="false"></LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/RemerciementTitre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/remerciement"
                        android:textColor="@color/gris_fonce" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif-light"
                        android:text="Alexandre LOUVRIER"
                        android:textColor="@color/gris_fonce"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/mailAlexandre"></LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>


    </LinearLayout>
</ScrollView>

