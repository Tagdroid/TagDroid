<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Line -->
    <item
        android:left="21dp"
        android:right="21dp">
        <shape android:shape="rectangle">
            <size android:width="6dp"
                android:height="48dp" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <!-- Top circle -->
    <item android:id="@+id/station"
        android:top="16dp"
        android:bottom="16dp"
        android:left="16dp"
        android:right="16dp" >
        <shape android:shape="oval">
            <solid android:color="@color/ligne_default" />
            <stroke android:color="@android:color/white" android:width="2dp"/>
        </shape>
    </item>
</layer-list>
