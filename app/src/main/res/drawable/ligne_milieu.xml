<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Line -->
    <item
        android:left="20dp"
        android:right="20dp">
        <shape android:shape="rectangle">
            <size android:width="8dp"
                android:height="48dp" />
            <solid android:color="@color/darker_gray" />
        </shape>
    </item>

    <!-- Top circle -->
    <item android:id="@+id/station"
        android:top="10dp"
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp" >
        <shape android:shape="oval">
            <solid android:color="@color/ligne_default" />
        </shape>
    </item>
</layer-list>
