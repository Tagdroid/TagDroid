<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Line -->
    <item android:top="0dp"
        android:left="4dp"
        android:right="4dp">
        <shape  android:shape="rectangle">
            <solid android:color="@color/gris_normal" />
        </shape>
    </item>

    <!-- Top circle -->
    <item android:top="4dp"
        android:bottom="4dp"
        android:left="1dp"
        android:right="1dp">
        <shape  android:shape="oval">
            <size android:width="8dp"
                android:height="8dp" />
            <solid android:color="@color/ligneb" />
        </shape>
    </item>
</layer-list>